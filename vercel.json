{
  "version": 2,
  "public": true,
  "buildCommand": "echo 'No build needed - static files only'",
  "outputDirectory": "backend/public",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
